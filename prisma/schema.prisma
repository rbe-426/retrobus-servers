// Prisma schema minimal reconstruit à partir des besoins frontend
// NOTE: stockage initial en mémoire; migrations futures nécessaires.
// Datasource & generator placeholders (adapter plus tard à PostgreSQL)

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Member {
  id            String   @id @default(cuid())
  email         String   @unique
  firstName     String?
  lastName      String?
  status        String   @default("active")
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  documents     Document[]
  expenseReports ExpenseReport[]
}

model Document {
  id         String   @id @default(cuid())
  member     Member   @relation(fields: [memberId], references: [id])
  memberId   String
  type       String
  status     String   @default("valid")
  expiresAt  DateTime?
  createdAt  DateTime @default(now())
}

model Event {
  id          String   @id @default(cuid())
  title       String
  description String?
  date        DateTime?
  status      String   @default("draft")
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  transactions Transaction[]
  scheduled    ScheduledExpense[]
  expenseReports ExpenseReport[]
}

model Transaction {
  id          String   @id @default(cuid())
  type        String   // recette | depense
  amount      Float    @default(0)
  description String?
  category    String?
  date        DateTime @default(now())
  event       Event?   @relation(fields: [eventId], references: [id])
  eventId     String?
  createdAt   DateTime @default(now())
}

model ScheduledExpense {
  id          String   @id @default(cuid())
  type        String   // recette | depense
  amount      Float    @default(0)
  description String?
  category    String?
  dueDate     DateTime?
  recurring   String?  // none | monthly | yearly
  event       Event?   @relation(fields: [eventId], references: [id])
  eventId     String?
  createdAt   DateTime @default(now())
}

model ExpenseReport {
  id          String   @id @default(cuid())
  date        DateTime @default(now())
  description String?
  amount      Float    @default(0)
  status      String   @default("open") // open | closed | reimbursed
  planned     Boolean  @default(false)
  fileName    String?
  fileUrl     String?
  member      Member?  @relation(fields: [memberId], references: [id])
  memberId    String?
  event       Event?   @relation(fields: [eventId], references: [id])
  eventId     String?
  createdAt   DateTime @default(now())
  reimbursedAt DateTime?
  closedAt    DateTime?
}

// ===== ADMINISTRATION VÉHICULES =====

model VehicleGrayscale {
  id                String   @id @default(cuid())
  vehicleId         String   @unique // référence au véhicule (parc)
  currentGrayscaleNumber String // numéro CG actuelle
  currentGrayscaleUrl String? // URL du fichier CG
  previousGrayscaleNumber String? // ancienne CG
  previousGrayscaleUrl String? // URL ancienne CG
  registrationDate  DateTime?
  expiresAt         DateTime?
  status            String   @default("valid") // valid | expired
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model VehicleCessionCertificate {
  id                String   @id @default(cuid())
  vehicleId         String   @unique // référence au véhicule (parc)
  certificateUrl    String? // URL du fichier de cession
  issuedDate        DateTime?
  issuedBy          String? // nom du vendeur
  status            String   @default("active") // active | archived
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model VehicleInsurance {
  id                String   @id @default(cuid())
  vehicleId         String   @unique // référence au véhicule (parc)
  attestationUrl    String? // URL attestation PDF
  insuranceCompany  String? // nom assureur
  policyNumber      String? // numéro police
  validFrom         DateTime? // date début validité
  validUntil        DateTime? // date fin validité
  validFromTime     String? // heure début (HH:mm)
  validUntilTime    String? // heure fin (HH:mm)
  status            String   @default("valid") // valid | expired | pending
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
}

model VehicleInspection {
  id                String   @id @default(cuid())
  vehicleId         String   // référence au véhicule (parc)
  attestationUrl    String? // URL attestation CT
  inspectionDate    DateTime? // date du dernier CT
  expiryDate        DateTime? // date expiration CT
  mileage           Int? // kilométrage au CT
  status            String   @default("valid") // valid | expired | contravisite | pending
  defects           String? // défauts relevés (JSON)
  nextInspectionDate DateTime? // date prochain CT obligatoire
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@unique([vehicleId, inspectionDate]) // un seul CT par date
}

model VehicleScheduleItem {
  id                String   @id @default(cuid())
  vehicleId         String // référence au véhicule (parc)
  type              String // "cg" | "insurance" | "inspection" | "maintenance" | "custom"
  description       String // ex: "Renouvellement assurance"
  dueDate           DateTime
  dueTime           String? // heure (HH:mm)
  priority          String   @default("normal") // low | normal | high | critical
  status            String   @default("pending") // pending | completed | overdue
  notes             String? // notes additionnelles
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@index([vehicleId])
  @@index([dueDate])
}

model VehicleAdministrativeNote {
  id                String   @id @default(cuid())
  vehicleId         String // référence au véhicule (parc)
  category          String // "administrative" | "maintenance" | "legal" | "other"
  content           String // contenu de la note
  attachmentUrl     String? // URL d'une pièce jointe si nécessaire
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt
  @@index([vehicleId])
}
